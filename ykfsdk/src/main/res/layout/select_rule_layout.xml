<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:orientation="horizontal"
    android:layout_width="640dp"
    android:gravity="center"
    android:background="@drawable/bg_white"
    android:layout_height="332dp">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="是否更换领域？"
        android:textColor="#303133"
        android:textStyle="bold"
        android:textSize="24sp"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="105dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:text="选择更换领域后，需要重新进入坐席等候区，是否确定更换？"
        android:textColor="#303133"
        android:textSize="24sp"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:id="@+id/left_btn"
        android:layout_marginBottom="48dp"
        android:text="取消"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/dialog_bg_wihte"
        android:background="@drawable/dialog_btn_blue_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="200dp"
        android:layout_marginLeft="100dp"
        android:layout_height="64dp">

    </TextView>

    <TextView
        android:id="@+id/right_btn"
        android:layout_marginBottom="48dp"
        android:text="确定"
        android:gravity="center"
        android:textColor="@color/dialog_bg_blue"
        android:background="@drawable/dialog_btn_white_bg"
        android:textSize="24sp"
        android:layout_marginRight="100dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="200dp"
        android:layout_height="64dp">

    </TextView>

    <ImageView
        android:id="@+id/close"
        android:src="@drawable/icon_chat_close"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>