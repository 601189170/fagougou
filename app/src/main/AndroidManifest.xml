<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fagougou.government">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.fagougou.government.CommonApplication"
        android:allowBackup="false"
        android:icon="@drawable/fagougou"
        android:label="@string/app_name"
        android:roundIcon="@drawable/fagougou"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Government"
        tools:replace="android:label,android:theme,android:allowBackup">
        <activity
            android:name="com.fagougou.xiaoben.consult.TouristsLoginActivity"
            android:exported="false" />
        <activity
            android:name="com.fagougou.xiaoben.consult.ChooseDomainActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="com.fagougou.government.UpdateActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>

        <activity
            android:name="com.fagougou.government.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Government"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.bugsnag.android.API_KEY"
            android:value="d8b721d631e0b6baa472c549795e5780" />
    </application>

</manifest>